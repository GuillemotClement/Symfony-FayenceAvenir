<header class="flex row-nowrap justify-center">
  <div class="flex column fill">
    <div class="header-top flex row-nowrap align-center justify-between ">
      <div class="header-logo">
        <a href="{{ path('home') }}" class="">
          <img src="{{ asset('build/images/logo.png') }}" alt="logo">
        </a>
      </div>
      <div class="header-search">
        <i class="fa-solid fa-magnifying-glass"></i>
        <input type="text" class="fill">
      </div>
      <div class="header-action flex align-center">
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
          <a href="{{ path('logout') }}"><i class="fa-solid fa-right-from-bracket"></i></a>
            {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('administration') }}"><i class="fa-solid fa-gear"></i></a>
            {% endif %}
          <a href="{{ path('profil') }}"><img src="{{ app.user.picture }}" alt="" class="avatar">Profil</a>
        {% else %}
          <a href="{{ path('login') }}"><i class="fa-solid fa-right-to-bracket"></i></a>
          <a href=" {{ path('register') }}"><i class="fa-solid fa-user-plus"></i></a>
        {% endif %}
      </div>
    </div>
    <div class="header-bottom flex justify-between">
      <ul class="header-nav flex ">
