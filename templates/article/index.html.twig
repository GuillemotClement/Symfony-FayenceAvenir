{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}

{% block body %}
<div class="">
  <h1 class="text-center text-capitalize mb-3">Nos articles</h1>
  <div class="container mb-5">
    <ul class="d-flex align-items-center justify-content-center column-gap-3 filter">
      <li class="white border rounded-pill py-2 px-3 "><a href="{{ path('articles_show')}}">Tous</a></li>
      <li class="white border rounded-pill py-2 px-3"><a href="{{ path('article_show_category', {category: 'culture'})}}"><i class="fa-solid fa-masks-theater me-2"></i></i>Culture/Animation</a></li>
      <li class="white border rounded-pill py-2 px-3"><a href="{{ path('article_show_category', {category: 'societal'})}}"><i class="fa-solid fa-comments me-2"></i>Sociétal</a></li>
      <li class="white border rounded-pill py-2 px-3"><a href="{{ path('article_show_category', {category: 'environment'})}}"><i class="fa-solid fa-leaf me-2"></i></i>Environnement</a></li>
      <li class="white border rounded-pill py-2 px-3"><a href="{{ path('article_show_category', {category: 'sport'})}}"><i class="fa-solid fa-person-running me-2"></i>Sport</a></li>
      <li class="white border rounded-pill py-2 px-3"><a href="{{ path('article_show_category', {category: 'energy'})}}"><i class="fa-solid fa-faucet-drip me-2"></i>Energie</a></li>
      <li class="white border rounded-pill py-2 px-3"><a href="{{ path('article_show_category', {category: 'agriculture'})}}"><i class="fa-solid fa-wheat-awn me-2"></i></i>Agriculture</a></li>
      <li class="white border rounded-pill py-2 px-3"><a href="{{ path('article_show_category', {category: 'tourism'})}}"><i class="fa-solid fa-suitcase-rolling me-2"></i>Tourisme</a></li>
    </ul>
  </div>
</div>
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      {% for article in articles %}
      <a href="{{ path('article_show', { id: article.id}) }}">
        <div class="card p-0 shadow" >
          <img src="{{ asset('build/images/eventFayence.jpeg')}}" class="card-img-top" alt="image article {{ article.title }}">
          <div class="card-body">
            <h3 class="card-title">{{ article.title }}</h3>
            <hr class="my-1">
            <div class="d-flex justify-content-center">
              <p class="text-center my-1 bg-primary text-white rounded-pill w-50 shadow">{{ article.category | replace({
                'culture': 'Culture/Animation',
                'societal': 'Sociétal', 
                'environment': 'Environnement', 
                'sport': 'Sport', 
                'energy': 'Energie', 
                'agriculture': 'Agriculture', 
                'tourism': 'Tourisme',
              })}}</p>
            </div>
            <div class="d-flex justify-content-between my-1 align-items-center">
              <p class="small fw-light">Ecrit par <span class="primary-text fw-bold">{{article.author.firstname}} {{article.author.lastname}}</span></p>
              <p class="small fw-light">Le {{ article.createdAt | date('d M Y')}}</p>
            </div>
            <hr class="my-1">
            <p class="card-text">{{ article.content | slice(0, 100) }}...</p>
            <div class="card-body d-flex ps-0">
              <a href="#" class="card-link">Editer</a>
              <a href="#" class="card-link">Supprimer</a>
            </div>
          </div>
        </div>
      </a>
      {% endfor %}
    </div>






<div class="content">

  <div class="cards">
    <div class="card-list">
    {% for article in articles %}
      <a href="{{ path('article_show', {id: article.id})}}">
        <div class="card">
          <div class="card-picture">
            <img src="{{ asset(article.picture) }}" alt="image article {{article.title}}">
          </div>
          <div class="card-content">
            <h2 class="card-title">{{ article.title }}</h2>
            <div class="separator"></div>
            <div class="card-info">
              <p class="small category">{{ article.category | replace({
                'culture': 'Culture/Animation',
                'societal': 'Sociétal', 
                'environment': 'Environnement', 
                'sport': 'Sport', 
                'energy': 'Energie', 
                'agriculture': 'Agriculture', 
                'tourism': 'Tourisme', 
              })}}</p>
              <p class="small"><span class="accent">{{article.author.firstname}} {{article.author.lastname}}</span> le {{ article.createdAt | date('d M Y à h:m')}}</p>
            </div>
            <div class="card-text">
              <p>{{ article.content | slice(0, 100) }}...</p>
            </div>
          </div>
          {# <div class="separator"></div>
          <div class="article-action flex justify-between">
            <div class="article-comment">
              <a href="{{ path('add_response', { id: article.id }) }}" class="small">Commenter</a>
              {# <span class="count">5</span> #}
            {# </div>
            <div class="article-share">
              <a class="small" href="">Partager</a>
            </div>
          </div> #} 
        </div> 
      </a>
    {% endfor %}
    </div>
  </div>
</div>
{% endblock %}



