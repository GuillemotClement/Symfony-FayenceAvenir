{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}

{% block body %}
<div class="content">
    <h1>Blog</h1>
    <div class="article">
        {% for article in articles %}
            <div class="article-ctn" href="">
                <img class="article-ctn-picture" src="{{ article.picture }}" alt="">
                <div class="article-ctn-text">
                    <h2 class="title">{{ article.title }}</h2>
                    <div class="separator"></div>
                    <p class='category'>{{ article.category }}</p>
                    <p class="info"><span class="author"></span> - <span class="date">{{ article.createdAt | date('F j, Y, g:i a') }}</span></p>
                    <p class="article-ctn-content">{{ article.content | slice(0, 50) }}...</p>  
                    <a href="{{ path('article_show', {id: article.id})}}">Lire l'article</a>
                </div>
            </div> 
        {% endfor %}
    </div>
</div>
{% endblock %}



