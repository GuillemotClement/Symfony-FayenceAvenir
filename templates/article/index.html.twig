{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}

{% block body %}
<div class="py-3 my-3">
  <h1 class="text-center text-capitalize mb-3">Nos articles</h1>
  <div class="container mb-5">
    <ul class="d-flex align-items-center justify-content-center gap-3 filter flex-wrap flex-md-row flex-column m-2">
      <li class="white border rounded-pill py-2 px-3 "><a href="{{ path('articles_show')}}">Tous</a></li>
      <li class="white border rounded-pill py-2 px-3"><a href="{{ path('article_show_category', {category: 'culture'})}}"><i class="fa-solid fa-music me-2"></i>Culture & Animation</a></li>
      <li class="white border rounded-pill py-2 px-3"><a href="{{ path('article_show_category', {category: 'economy'})}}"><i class="fa-solid fa-store me-2"></i></i>Economie</a></li>
      <li class="white border rounded-pill py-2 px-3"><a href="{{ path('article_show_category', {category: 'youth'})}}"><i class="fa-solid fa-child me-2"></i>Jeunesse</a></li>
      <li class="white border rounded-pill py-2 px-3"><a href="{{ path('article_show_category', {category: 'medico-social'})}}"><i class="fa-solid fa-notes-medical me-2"></i>Médico-social</a></li>
      <li class="white border rounded-pill py-2 px-3"><a href="{{ path('article_show_category', {category: 'environment'})}}"><i class="fa-solid fa-tree-city me-2"></i>Environnement</a></li>
      <li class="white border rounded-pill py-2 px-3"><a href="{{ path('article_show_category', {category: 'agriculture'})}}"><i class="fa-solid fa-wheat-awn me-2"></i></i>Agriculture</a></li>
      <li class="white border rounded-pill py-2 px-3"><a href="{{ path('article_show_category', {category: 'tourism'})}}"><i class="fa-solid fa-suitcase-rolling me-2"></i>Tourisme</a></li>
    </ul>
  </div>
</div>
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 pb-3 mb-3">
      {% for article in articles %}
      <a href="{{ path('article_show', { id: article.id}) }}">
        <div class="card p-0 shadow card-height" >
          <img src="{{ asset(article.picture) }}" alt="image article {{article.title}}" class="img-fluid rounded shadow">
          <div class="card-body d-flex flex-column justify-content-between">
            <h3 class="card-title">{{ article.title | title}}</h3>
            <hr class="my-1">
            <div class="d-flex justify-content-center">
              <p class="text-center my-1 bg-primary text-white rounded-pill w-50 shadow">{{ article.category | replace({
                'economy': 'Economie',
                'youth': 'Jeunesse', 
                'medico-social': 'Médico-social', 
                'environment': 'Environnement', 
                'tourism': 'Tourisme', 
                'agriculture': 'Agriculture', 
                'culture': 'Culture et animation',
              })}}</p>
            </div>
            <div class="d-flex justify-content-between my-1 align-items-center">
              <p class="small fw-light">Ecrit par <span class="primary-text fw-bold">{{article.author.username}}</span></p>
              <p class="small fw-light">Le {{ article.createdAt | date('d M Y h:mm')}}</p>
            </div>
            <hr class="my-1">
            <p class="card-text">{{ article.content | slice(0, 100) }}...</p>
          </div>
        </div>
      </a>
      {% endfor %}
    </div>
{% endblock %} 






