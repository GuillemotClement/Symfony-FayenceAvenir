        <a href="{{ path('login')}}" class="btn btn-sm btn-outline-light me-3">Connexion</a>
        <a href="{{ path('register')}}" class="btn btn-sm btn-outline-light">Inscription</a>
      {% endif %}
      </div>
    </div>
  </div>
</header>




